<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_order_background_color"
        android:paddingBottom="10dp"
        android:shadowColor="@color/common_item_shadow_color"
        android:shadowDx="0"
        android:shadowDy="2">

        <View
            android:layout_width="3dp"
            android:layout_height="18dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/shape_green_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/text_black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="生活废纸回收" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/ic_call"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/layout_order"
            layout="@layout/layout_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <Button
            android:id="@+id/btn_confirm_complete"
            android:layout_width="114dp"
            android:layout_height="36dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/selector_common_button_background_color_green"
            android:text="@string/confirm_complete"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_order" />

        <Button
            android:layout_width="114dp"
            android:layout_height="36dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/selector_common_button_background_color_white"
            android:text="@string/cancel_order"
            android:textColor="@color/main_color"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/btn_confirm_complete"
            app:layout_constraintTop_toBottomOf="@id/layout_order" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>